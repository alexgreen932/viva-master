{
	"name": "custom-theme/my-theme",
	"type": "project",
	"description": "Custom WordPress theme coding standards setup.",
	"keywords": [
		"WordPress",
		"Theme",
		"Coding Standards"
	],
	"homepage": "https://example.com",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
	},
	"scripts": {
		"standards:check": "phpcs --standard=WordPress --extensions=php functions.php classes/",
		"standards:fix": "phpcbf --standard=WordPress --extensions=php functions.php classes/"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
